<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <TextView
        android:id="@+id/id_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="이메일"
        app:layout_constraintBottom_toBottomOf="@id/password_text"
        app:layout_constraintBottom_toTopOf="@+id/password_text"
        app:layout_constraintRight_toLeftOf="@id/id_edit_text"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        />

    <EditText
        android:id="@+id/id_edit_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/id_text"
        app:layout_constraintBottom_toTopOf="@+id/password_edit_text"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        />

    <Button
        android:id="@+id/btn_check_id"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="중복체크"
        android:textSize="8dp"
        app:layout_constraintLeft_toRightOf="@id/id_edit_text"
        app:layout_constraintTop_toTopOf="@+id/guideline2"/>

    <TextView
        android:id="@+id/password_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="비밀번호"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/id_text"
        app:layout_constraintRight_toLeftOf="@+id/password_edit_text"
        />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/id_edit_text"
        app:layout_constraintLeft_toRightOf="@+id/password_text"
        />


    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="회원가입"
        app:layout_constraintLeft_toLeftOf="@id/guideline4"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>